  <div>
        {results.length === 0 || query.length < 0 ? (
          <p>SEARCH something</p>
        ) : (
          <CardContainer>
            {results.map((show) => (
              <Card key={show.id} show={show} />
            ))}
            {loading && <p>Ładowanie...</p>} {/* Wyświetl informację o ładowaniu */}
          </CardContainer>
        )}
      </div>